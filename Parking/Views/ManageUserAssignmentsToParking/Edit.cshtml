@model Parking.Models.EditParkingUserAssignment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FAParkingAndDateRelationship</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="@Model.AssingOnDate" type="hidden" class="form-control">
            <input asp-for="@Model.ParkingNumberID" type="hidden" class="form-control">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Assign to user</label>
                <select asp-for="@Model.AssignToUserID" class="form-control" asp-items="@Model.AssignToUser"><option value="">Free space</option></select>
            </div>
            <div class="form-group">
                <label class="control-label">Custom assignment (clients and visitors):</label>
                <textarea id="custom-assignment" asp-for="@Model.Description" onkeydown="ShowHideCustomElements()" class="form-control" placeholder="Example: 'a client will be parking here today'"></textarea>
            </div>
            <div id="custom-assignment-fields">
                <div class="form-group">
                    <label class="control-label">People can park here outside selected time:</label>
                    <input asp-for="@Model.ApplyPartialBooking" />
                </div>
                <div class="form-group">
                    <label class="control-label">Start time:</label>
                    <input asp-for="@Model.StartTimeIfPartial" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">End time:</label>
                    <input asp-for="@Model.EndTimeIfPartial" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="~/js/ShowAndHideCustomAssignementElements.js"></script>
}